@model IEnumerable<LetterManagement.Models.Letter>

@{
    ViewData["Title"] = "Letters";
}

<h1>Letters</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Subject</th>
            <th>Date</th>
            <th>Sender</th>
            <th>Receiver</th>
            <th>Type</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Subject)</td>
            <td>@Html.DisplayFor(modelItem => item.Date)</td>
            <td>@Html.DisplayFor(modelItem => item.Sender)</td>
            <td>@Html.DisplayFor(modelItem => item.Receiver)</td>
            <td>@Html.DisplayFor(modelItem => item.IsOutgoing ? "Outgoing" : "Incoming")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>